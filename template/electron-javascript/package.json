{
  "name": "{{PROJECT_NAME}}",
  "version": "0.0.0",
  "main": "./out/main/index.js",
  "description": "{{PROJECT_NAME}}",
  "scripts": {
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "postinstall": "node ./scripts/postinstall/postinstall.js",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:linux": "npm run build && electron-builder --linux --config",
    "i18n-extract": "refast-dev --cmd i18n-extract --source-path ./src/renderer/src --output-path ./src/renderer/src/locales/en-US.json"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.0",
    "@electron-toolkit/utils": "^3.0.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^1.0.1",
    "@electron-toolkit/eslint-config-ts": "^1.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@refastdev/refast": "^0.0.22",
    "@refastdev/refast-dev": "^0.0.22",
    "@types/node": "20.11.10",
    "ajv": "^8.12.0",
    "electron": "^22.3.27",
    "electron-builder": "^24.9.1",
    "electron-debug": "^3.2.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-vite": "^2.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "sass": "^1.70.0",
    "vite": "^5.1.4"
  }
}
